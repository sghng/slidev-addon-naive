{
  "name": "slidev-addon-naive",
  "version": "0.9.0",
  "description": "An addon that brings Naive UI components to Slidev.",
  "keywords": [
    "naive-ui",
    "slideshow",
    "slidev",
    "slidev-addon",
    "vue"
  ],
  "homepage": "https://naive.sghuang.com",
  "bugs": {
    "url": "https://github.com/sghuang19/slidev-addon-naive/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sghuang19/slidev-addon-naive.git"
  },
  "license": "MIT",
  "author": "Samuel Huang <hi@sghuang.com> (https://sghuang.com)",
  "type": "module",
  "main": "src/index.ts",
  "files": [
    "setup/",
    "src/",
    "style.css",
    "uno.config.ts",
    "vite.config.ts"
  ],
  "workspaces": [
    "demo"
  ],
  "scripts": {
    "build": "bun run --cwd=demo build",
    "dev": "bun --cwd=demo dev",
    "format": "prettier -c .",
    "format:write": "prettier -w .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "preview": "bun run --cwd=demo preview",
    "sort": "bunx sort-package-json",
    "spellcheck": "cspell .",
    "test": "vitest"
  },
  "dependencies": {
    "naive-ui": "^2.41.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@slidev/cli": "^51.5.0",
    "@slidev/theme-default": "^0.25.0",
    "@slidev/types": "^51.5.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "cspell": "^9.0.0",
    "eslint": "^9.24.0",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-sh": "^0.17.0",
    "prettier-plugin-slidev": "^1.0.5",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "@slidev/types": "*"
  }
}
